<h1> Post Show Page </h1>

<h2> <%= @post.title %> </h2>
<p> <%= @post.body %> </p>
 <p><small> Created <%= time_ago_in_words(@post.created_at) %> ago </small></p>

<%= link_to 'Edit', edit_post_path(@post) %>
<%= button_to 'Delete', post_path(@post), method: :delete, form: {data: {turbo_confirm: "Are you sure you would like to proceed?"}} %>

<h3> Comment </h3>

<% if @comment.errors.any? %>
<ul>
 <% @comment.errors.full_messages.each do |message| %>

 <li> <%= message %> </li>

 <% end %>

</ul>

 <% end %>

 <%= form_with(model: [@post, @comment]) do |form| %>
 <div>

 <%= form.label :body %>
 <br>
 <%= form.text_area :body, cols: 50, rows: 5%>
 <br>
 <%= form.submit "Submit" %>

 </div>
 <% end %>

 <hr>

<ul>
<% @comments.each do |comment| %>

<div>
 <%= comment.body %>
 <small> Commented <%= time_ago_in_words(comment.created_at) %> ago </small>
 <%= link_to "Delete", post_comment_path(@post.id, comment.id), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
</div>

<% end %>
</ul>
